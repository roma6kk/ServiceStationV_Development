<Window x:Class="ServiceStationV.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceStationV"
        mc:Ignorable="d"
        Title="{DynamicResource RegWindowTitle}" 
        Height="600" 
        Width="600"
        Closing="RegWindow_Closing"
         WindowStartupLocation="CenterScreen"
         WindowStyle="None"
         AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#0B2444"/>
        <FontFamily x:Key="MainFont">\Fonts\Orbitron\#Orbitron</FontFamily>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="..\images\RegistrationWindowBackground.png" 
                    Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Background="#B3FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка возврата -->
        <Border Grid.Row="0" Grid.Column="0" 
                Background="#EA022B" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"  
                CornerRadius="7"
                Margin="7"
                Padding="5">
            <Button Click="GetBackBTN_Click" 
                    Background="#EA022B" 
                    BorderThickness="0">
                <TextBlock Text="{DynamicResource RegWindowBackButton}" 
                          FontFamily="{StaticResource MainFont}" 
                          FontWeight="Black" 
                          FontSize="12" 
                          Foreground="WhiteSmoke"/>
            </Button>
        </Border>

        <!-- Основная форма регистрации -->
        <Border Background="{StaticResource PrimaryColor}" 
                CornerRadius="10"  
                Grid.Column="1" 
                Grid.Row="1" 
                Opacity="0.95">
            <StackPanel Opacity="0.95">
                <TextBlock Text="{DynamicResource RegWindowTitle}" 
                          TextAlignment="Center"  
                          Margin="0,10,0,0" 
                          Width="200"  
                          FontFamily="{StaticResource MainFont}" 
                          Foreground="WhiteSmoke" 
                          FontSize="26" 
                          FontWeight="ExtraBold"/>

                <TextBlock Text="{DynamicResource RegWindowInfoText}" 
                          TextAlignment="Center" 
                          FontFamily="{StaticResource MainFont}" 
                          FontSize="12" 
                          Foreground="WhiteSmoke" 
                          Margin="0,4,0,0" 
                          FontWeight="SemiBold"/>

                <!-- ФИО -->
                <TextBlock Text="{DynamicResource RegWindowFullName}" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Margin="0,15,0,2" 
                          FontFamily="{StaticResource MainFont}" 
                          Foreground="WhiteSmoke" 
                          FontWeight="SemiBold"/>

                <Border Width="300" 
                        Height="35" 
                        Background="White" 
                        CornerRadius="10"  
                        Opacity="0.9">
                    <TextBox x:Name="FullNameTB" 
                             FontSize="16" 
                             Width="298" 
                             Height="35" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             Padding="5"/>
                </Border>

                <!-- Номер телефона -->
                <TextBlock Text="{DynamicResource RegWindowPhone}" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,2" 
                          FontFamily="{StaticResource MainFont}" 
                          Foreground="WhiteSmoke" 
                          FontWeight="SemiBold"/>

                <Border Width="300" 
                        Height="35" 
                        Background="White" 
                        CornerRadius="10" 
                        Opacity="0.9">
                    <TextBox x:Name="PhoneNumberTB" 
                             FontSize="16" 
                             Width="298" 
                             Height="35" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             Padding="5"/>
                </Border>

                <!-- Логин -->
                <TextBlock Text="{DynamicResource RegWindowLogin}" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,2" 
                          FontFamily="{StaticResource MainFont}" 
                          Foreground="WhiteSmoke" 
                          FontWeight="SemiBold"/>

                <Border Width="300" 
                        Height="35" 
                        Background="White" 
                        CornerRadius="10"  
                        Opacity="0.9">
                    <TextBox x:Name="LoginTB" 
                             FontSize="16" 
                             Width="298" 
                             Height="35" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             Padding="5"/>
                </Border>

                <!-- Пароль -->
                <TextBlock Text="{DynamicResource RegWindowPassword}" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,2" 
                          FontFamily="{StaticResource MainFont}" 
                          Foreground="WhiteSmoke" 
                          FontWeight="SemiBold"/>

                <Border Width="300" 
                        Height="35" 
                        Background="White" 
                        CornerRadius="10"  
                        Opacity="0.9">
                    <PasswordBox x:Name="PasswordTB" 
                                FontSize="16" 
                                Width="298" 
                                Height="35" 
                                BorderThickness="0" 
                                Background="Transparent" 
                                Padding="5"/>
                </Border>

                <!-- Повтор пароля -->
                <TextBlock Text="{DynamicResource RegWindowRepeatPassword}" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,2" 
                          FontFamily="{StaticResource MainFont}" 
                          Foreground="WhiteSmoke" 
                          FontWeight="SemiBold"/>

                <Border Width="300" 
                        Height="35" 
                        Background="White" 
                        CornerRadius="10" 
                        Opacity="0.9">
                    <PasswordBox x:Name="PasswordRepeatTB" 
                                FontSize="16" 
                                Width="298" 
                                Height="35" 
                                BorderThickness="0" 
                                Background="Transparent" 
                                Padding="5"/>
                </Border>

                <!-- Кнопка регистрации -->
                <Border Background="#EA022B" 
                        Width="300" 
                        HorizontalAlignment="Center" 
                        Height="37" 
                        Margin="0,20,0,0" 
                        CornerRadius="10" 
                        Padding="5">
                    <Button x:Name="RegBTN" 
                            Click="RegBTN_Click" 
                            Background="#EA022B" 
                            BorderThickness="0">
                        <TextBlock Text="{DynamicResource RegWindowRegisterButton}" 
                                   FontFamily="{StaticResource MainFont}" 
                                   FontWeight="Black" 
                                   FontSize="12" 
                                   Foreground="WhiteSmoke"/>
                    </Button>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>