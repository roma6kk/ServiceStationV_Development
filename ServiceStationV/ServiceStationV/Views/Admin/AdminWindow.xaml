<Window x:Class="ServiceStationV.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceStationV"
        mc:Ignorable="d"
        Title="MainMenuWindow" Height="1280" Width="1920"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Background>
        <ImageBrush ImageSource="../../images/MainMenuBackground.HEIC" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Background="{DynamicResource PrimaryBrush}" Opacity="0.95">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" CornerRadius="0,0,30,30" Background="{DynamicResource HeaderGradient}">
            <Grid>
                <Button Grid.Column="0" Grid.Row="0" Width="50" HorizontalAlignment="Right" Height="100" Margin="0,0,44,0" BorderThickness="0" Click="AddServiceBTN_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="\images\AdminImages\AddService.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <Button Grid.Column="0" Grid.Row="0" Width="50" HorizontalAlignment="Right" Height="100" Margin="0,0,124,0" BorderThickness="0" Click="OrdersBTN_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="\images\ProfileImages\DarkTheme\ListWhite.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <TextBlock Text="{DynamicResource MainMenu_Header}" 
                           FontFamily="{StaticResource MainFont}" 
                           FontWeight="Bold"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           FontSize="56" 
                           Foreground="WhiteSmoke"
                           Margin="64,0,0,0"/>
            </Grid>
        </Border>

        <Button x:Name="ClearFilterButton" Style="{DynamicResource ClearButtonStyle}" Content="X" Width="20" Height="30" FontSize="20" FontWeight="Regular" Foreground="{DynamicResource TextBrush}" Background="Transparent" Click="ClearFilterButton_Click" HorizontalAlignment="Left" Margin="45,10,0,0" BorderThickness="0" Grid.Row="1">
        </Button>

        <Button Style="{DynamicResource ClearButtonStyle}" x:Name="ClearSortButton" Content="X" Width="20" Height="30" FontSize="20" FontWeight="Regular" Foreground="{DynamicResource TextBrush}" Background="Transparent" Click="ClearSortButton_Click" HorizontalAlignment="Left" Margin="265,10,0,0" BorderThickness="0" Grid.Row="1">
        </Button>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="64,15,0,0">
            <Border CornerRadius="10" BorderThickness="1" Width="200" Height="30" Margin="0,0,20,0">
                <ComboBox Style="{DynamicResource ComboBoxStyle}" ItemsSource="{Binding FilterServices}" SelectedValue="{Binding SelectedServiceOption, Mode=TwoWay}" SelectedValuePath="Type" DisplayMemberPath="DisplayName" FontSize="13" Margin="3" BorderThickness="0"/>
            </Border>

            <Border CornerRadius="10" BorderThickness="1" Width="240" Height="30">
                <ComboBox Style="{DynamicResource ComboBoxStyle}" ItemsSource="{Binding SortOptions}" SelectedValue="{Binding SelectedSortOption, Mode=TwoWay}" DisplayMemberPath="DisplayName" SelectedValuePath="Key" FontSize="13" Margin="3" BorderThickness="0"/>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ViewServices}" Margin="20" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Карточка -->
                        <Border x:Name="CardBorder" 
                    Style="{DynamicResource ServiceCardStyle}" 
                    CornerRadius="10" 
                    Margin="10" 
                    Padding="15" 
                    Width="450"
                    Background="{DynamicResource CardBackground}"
                    MouseLeftButtonDown="Card_MouseLeftButtonDown"
                    Cursor="Hand">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Изображение -->
                                <Border CornerRadius="10" BorderThickness="1" Height="200" Grid.Row="0" Margin="0 0 0 10" Background="{DynamicResource CardBackground}">
                                    <Image Source="{Binding ImageSrc}" Stretch="UniformToFill" Height="200" ClipToBounds="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </Border>

                                <!-- Название и описание -->
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="{Binding ServiceName}" Foreground="{DynamicResource TextBrush}" FontSize="18" FontWeight="Bold" Margin="0 0 0 5"/>
                                    <TextBlock Text="{Binding SmallDescription}" Foreground="{DynamicResource TextBrush}" FontSize="14" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- Тип услуги, цена и кнопки -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="4">
                                    <Border Background="{DynamicResource AccentBrush}" CornerRadius="4" Padding="6 2">
                                        <TextBlock Text="{Binding LocalizedServiceType}" Foreground="White" FontSize="12"/>
                                    </Border>
                                    <TextBlock Text="{Binding LocalizedPrice}" Style="{DynamicResource PriceTextStyle}"/>

                                    <!-- Кнопки "Редактировать" и "Удалить" -->
                                    <Button Content="Edit" 
                                Style="{DynamicResource EditButtonStyle}" 
                                Click="EditService_Click" 
                                Tag="{Binding}" 
                                Margin="10,0,0,0"/>
                                    <Button Content="Del" 
                                Style="{DynamicResource DeleteButtonStyle}" 
                                Click="DeleteService_Click" 
                                Tag="{Binding}" 
                                Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>