<Window x:Class="ServiceStationV.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource ChangePasswordTitle}" 
        Height="400" 
        Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{DynamicResource PrimaryBrush}"
            CornerRadius="10"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="1">
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Content="✕" 
                        FontSize="15"
                        FontWeight="Black"
                        HorizontalAlignment="Right" 
                        FontFamily="{StaticResource MainFont}"
                        Margin="0,0,0,30"
                        Width="20" 
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource AccentBrush}"
                        Click="CloseBTN_Click"
                        />

            <!-- Заголовок -->
            <TextBlock Text="{DynamicResource ChangePasswordTitle}"
                       Grid.Row="0"
                       FontFamily="{StaticResource MainFont}"
                       FontSize="24"
                       Foreground="{DynamicResource AccentBrush}"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Форма смены пароля -->
            <StackPanel Grid.Row="1">
                <!-- Текущий пароль -->
                <TextBlock Text="{DynamicResource CurrentPassword}"
                           FontFamily="{StaticResource MainFont}"
                           Foreground="{DynamicResource AccentBrush}"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="CurrentPasswordBox"
                             FontFamily="{StaticResource MainFont}"
                             Margin="0,0,0,15"/>

                <!-- Новый пароль -->
                <TextBlock Text="{DynamicResource NewPassword}"
                           FontFamily="{StaticResource MainFont}"
                           Foreground="{DynamicResource AccentBrush}"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="NewPasswordBox"
                             FontFamily="{StaticResource MainFont}"
                             Margin="0,0,0,15"/>

                <!-- Подтверждение пароля -->
                <TextBlock Text="{DynamicResource ConfirmPassword}"
                           FontFamily="{StaticResource MainFont}"
                           Foreground="{DynamicResource AccentBrush}"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             FontFamily="{StaticResource MainFont}"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="{DynamicResource CancelButton}"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        
                        Width="100"
                        Margin="0,0,10,0"
                        Click="CancelBTN_Click"/>

                <Button Content="{DynamicResource ChangePasswordButton}"
                        Style="{DynamicResource AccentButtonStyle}"
                        Click="ChangePasswordBTN_Click"
                        Width="150"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>