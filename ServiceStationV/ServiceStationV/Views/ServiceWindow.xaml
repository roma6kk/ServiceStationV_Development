<Window x:Class="ServiceStationV.Views.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceStationV" 
        xmlns:viewsmodels="clr-namespace:ServiceStationV.ViewsModels" 
        d:DataContext="{d:DesignInstance Type=viewsmodels:ServiceWindowViewModel}"
        mc:Ignorable="d"
        Title="ServiceWindow" 
        Height="760" 
        Width="600"
        ResizeMode="NoResize"
        WindowStyle="None"
        Deactivated="Window_Deactivated"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <Window.Resources>
        <FontFamily x:Key="MainFont">\Fonts\Orbitron\#Orbitron</FontFamily>

        <!-- Стиль для кнопки закрытия -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для иконок действий -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" 
            BorderThickness="2" 
            BorderBrush="{DynamicResource CardBorderBrush}" 
            Background="{DynamicResource CardBackground}"
            >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Изображение услуги -->
            <Border Grid.Column="1"
                    Grid.Row="1"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource CardBorderBrush}"
                    Width="auto"
                    Height="auto"
                    Margin="10,5,10,5"
                    CornerRadius="10"
                    >
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                     Opacity="0.3" 
                                     Color="{DynamicResource PrimaryColor}"/>
                </Border.Effect>
                <Border.Background>
                    <ImageBrush ImageSource="{Binding ImagePath}" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>

            <!-- Кнопка закрытия -->
            <Button Grid.Column="2"
                Content="✕" 
                FontSize="25"
                FontWeight="Black"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                FontFamily="{StaticResource MainFont}"
                Margin="0,0,0,0"
                Width="40" 
                Height="40"
                Background="Transparent"
                BorderThickness="0"
                Foreground="{DynamicResource AccentBrush}"
                Click="CloseBTN_Click"/>

            <!-- Описание услуги -->
            <ScrollViewer Grid.Row="2" 
                          Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Width="auto" 
                          Height="auto"
                          Margin="15,10,15,10"
                          BorderThickness="0"
                          FontFamily="{StaticResource MainFont}"
                          FontWeight="Medium"
                          FontSize="24"
                          Foreground="{DynamicResource TextBrush}">
                <StackPanel>
                    <TextBlock Text="{Binding LargeDiscription}" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               Height="auto" 
                               Width="auto" 
                               TextWrapping="Wrap"/>
                    <MediaElement x:Name="ServiceVideo"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  Height="0"
                                  Width="0"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Stretch="UniformToFill"
                                  Volume="0.7"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Панель действий -->
            <Border Grid.Row="3" Grid.Column="1" Background="{DynamicResource SecondaryBrush}" CornerRadius="10" Margin="0,0,0,0">

                <StackPanel Orientation="Horizontal"  
                         Grid.Row="3" 
                         Margin="0,0,0,0"
                         Grid.Column="1" 
                         Width="500"
                         HorizontalAlignment="Center">
                <Button Name="CartBTN"
                        Height="50"
                        Width="50"
                        HorizontalAlignment="Left"
                        Margin="10,0,0,0"
                        Click="CartBTN_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="{StaticResource ShoppingCart}"/>
                    </Button.Background>
                </Button>
                <Button Name="FavListBTN"
                        Height="50"
                        Width="50"
                        Margin="380,0,0,0"
                        HorizontalAlignment="Right"
                        Click="FavListBTN_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="{DynamicResource StarAdd}"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>