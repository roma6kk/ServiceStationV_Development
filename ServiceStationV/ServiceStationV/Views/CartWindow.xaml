<Window x:Class="ServiceStationV.Views.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceStationV.Views"
        mc:Ignorable="d"
        Title="Корзина" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <!-- Фоновое изображение как в FavListWindow -->
    <Window.Background>
        <ImageBrush ImageSource="..\images\LoginWindowBackground.jpg" Stretch="UniformToFill" />
    </Window.Background>

    <!-- Основная панель с полупрозрачным слоем -->
    <Grid Background="#B3FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок в стиле FavListWindow -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Корзина"
                       FontFamily="{Binding MainFont}"
                       FontSize="36"
                       FontWeight="Black"
                       Foreground="#0B2444"
                       Margin="0,20,0,10"/>

            <!-- Кнопка закрытия -->
            <Button Content="✕" 
                    FontSize="20"
                    HorizontalAlignment="Right" 
                    Margin="20,0,0,0"
                    Width="40" 
                    Height="40"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="#0B2444"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Список услуг в стиле FavListWindow -->
        <ScrollViewer Grid.Row="1" Margin="30,0,30,10">
            <ItemsControl ItemsSource="{Binding CartItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#0B2444" CornerRadius="15" Margin="10" Padding="10" Opacity="0.95">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>

                                <!-- Изображение услуги -->
                                <Border Width="150" Height="150" CornerRadius="10" Background="White">
                                    <Image Source="{Binding ImageSrc}" Stretch="UniformToFill" />
                                </Border>

                                <!-- Информация об услуге -->
                                <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ServiceName}" 
                                               FontFamily="{Binding MainFont}" 
                                               FontSize="20" 
                                               FontWeight="ExtraBold" 
                                               Foreground="WhiteSmoke"/>
                                    <TextBlock Text="{Binding SmallDescription}" 
                                               FontFamily="{Binding MainFont}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="WhiteSmoke"
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- Цена и кнопка удаления -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0} ₽'}" 
                                               FontFamily="{Binding MainFont}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#EA022B"
                                               HorizontalAlignment="Right"/>
                                    <Button Content="Удалить"
                                            FontFamily="{Binding MainFont}"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Foreground="WhiteSmoke"
                                            Background="#EA022B"
                                            BorderThickness="0"
                                            Width="100"
                                            Height="30"
                                            Margin="0,10,0,0"
                                            Tag="{Binding ServiceId}"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Панель итого -->
        <Border Grid.Row="2" Background="#0B2444" CornerRadius="0,0,10,10" Opacity="0.95" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding TotalPrice, StringFormat='Итого: {0} ₽'}"
                           FontFamily="{Binding MainFont}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="WhiteSmoke"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>

                <Button Grid.Column="1"
                        Content="Оформить заказ"
                        FontFamily="nigag"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Width="200"
                        Margin="20,0,0,0"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>