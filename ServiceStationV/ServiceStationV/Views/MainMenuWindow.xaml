    <Window x:Class="ServiceStationV.MainMenuWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:ServiceStationV"
            mc:Ignorable="d"
            Title="MainMenuWindow" Height="1280" Width="1920"
            WindowState="Maximized"
            ResizeMode="NoResize"
            WindowStyle="None">

        <Window.Background>
            <ImageBrush ImageSource="..\images\MainMenuBackground.HEIC" Stretch="UniformToFill"/>
        </Window.Background>

        <Grid Background="#B3FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Информационная шапка -->
            
            <Border Grid.Column="0" Grid.Row="0" CornerRadius="0,0,30,30">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#003468" Offset="0" />
                        <GradientStop Color="#1A3E7C" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Text="Сервис кртуй классный" 
                       FontFamily="{Binding MainFont}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left" 
                       FontSize="56" 
                       Foreground="WhiteSmoke"
                       Margin="64,0,0,0"/>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,50,0">
                        <!-- Поиск -->
                        <Border Width="300" Height="50" Margin="0,0,30,0" 
                        VerticalAlignment="Center" 
                        CornerRadius="30"
                        BorderThickness="1"
                        BorderBrush="White"
                        Background="White"
                        Padding="8">
                            <TextBox
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        FontFamily="{Binding MainFont}"
                        FontSize="30"
                        Width="284" Height="34" 
                    />
                            
                        </Border>
                    

                    <!-- Кнопка "Избранное" -->
                        <Button Width="50" Height="100" Margin="44,0,0,0" BorderThickness="0" Click="FavListBTN_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="{StaticResource Star}" Stretch="Uniform"/>
                            </Button.Background>
                        </Button>

                        <!-- Кнопка "Корзина" -->
                        <Button Width="50" Height="100" Margin="44,0,0,0" BorderThickness="0" Click="CartBTN_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="{StaticResource ShoppingCart}" Stretch="Uniform"/>
                            </Button.Background>
                        </Button>

                        <!-- Кнопка "Профиль" -->
                        <Button Width="50" Height="100" Margin="44,0,44,0" BorderThickness="0" Click="ProfileBTN_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="{StaticResource ProfileIcon}" Stretch="Uniform"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>



            <!-- Фильтры -->


        <Button x:Name="ClearFilterButton"
                    Content="X"
                    Width="20" Height="30"
                    FontSize="20"
                    FontWeight="Regular"
                    Foreground="Black"
                    Background="White"
                    Click="ClearFilterButton_Click"
                    HorizontalAlignment="Left"
                    Margin="45,0,0,0"
                    BorderThickness="0"
                    Grid.Row="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFilterApplied}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Сортировка и фильтры -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="64,15,0,0">
                <Border CornerRadius="10" Background="#E9E9E9" BorderBrush="White" BorderThickness="1" Width="200" Height="30" Margin="0,0,20,0">
                    <ComboBox 
                        ItemsSource="{Binding FilterServices}"
                        SelectedItem="{Binding SelectedServiceOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="13"
                        Margin="3"
                        BorderThickness="0"
                        Background="White"/>
                </Border>

                <Border CornerRadius="10" Background="#E9E9E9" BorderBrush="White" BorderThickness="1" Width="240" Height="30">
                    <ComboBox 
                        ItemsSource="{Binding SortOptions}"
                        SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}"
                        FontSize="13"
                        Margin="3"
                        BorderThickness="0"
                        Background="White"/>
                </Border>
            </StackPanel>

            <!-- Услуги -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ViewServices}" Margin="20" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button BorderThickness="0" Background="Transparent" Padding="0" Click="ServiceBTN_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Content>
                                    <Border x:Name="CardBorder"
                                            Background="White"
                                            CornerRadius="10"
                                            Margin="10"
                                            Padding="15"
                                            Width="450"
                                            BorderBrush="#e0e0e0"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="20" Opacity="0.5" ShadowDepth="10"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                        <Border CornerRadius="10" BorderThickness="1" Height="200" Grid.Row="0" Margin="0 0 0 10" Background="White">
                                            <Image Source="{Binding ImageSrc}" 
                                                   Stretch="UniformToFill" 
                                                   Height="200"
                                                   ClipToBounds="True"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Stretch"/>
                                        </Border>
                                       



                                        <StackPanel Grid.Row="1">
                                                <TextBlock Text="{Binding ServiceName}" FontSize="18" FontWeight="Bold" Foreground="#333"
                                                           Margin="0 0 0 5"/>
                                                <TextBlock Text="{Binding SmallDescription}" FontSize="14" Foreground="#666"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom" Margin="4">
                                                <Border Background="Black" CornerRadius="4" Padding="6 2">
                                                    <TextBlock Text="{Binding ServiceType}" Foreground="White" FontSize="12"/>
                                                </Border>
                                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" FontSize="16"
                                                           FontWeight="Bold" Foreground="#2e7d32" Margin="10 0 0 0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
       
        </Grid>
    </Window>
